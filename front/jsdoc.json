{
    "source": {
        "include": ["src"],
        "includePattern": "(.js$|.jsx$)",
        "excludePattern": "(node_modules/|docs/|public)"
    },
    "plugins": ["plugins/markdown"],
    "templates": {
        "cleverLinks": true,
        "monospaceLinks": true
    },
    "opts": {
        "recurse": true,
        "encoding": "utf8",
        "destination": "./docs/",
        "readme": "./readme.md"
    }
}
